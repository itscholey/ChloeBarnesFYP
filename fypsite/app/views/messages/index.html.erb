<h1>Inbox</h1>

<% @messages.each do |message| %>
  <div class="message">
    <h2><%= message.subject %></h2>
    <p>Sent on: <%= message.details %> by <%= message.sender %></p>
    <p><%= message.read ? "Read" : "Unread" %></p>
    <p><%= link_to 'Show', message_path(message) %></p>
  </div>

<% end %>

<p><%= link_to 'New', new_message_path %></p>
